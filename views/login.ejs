<body>
	<!-- partial:index.partial.html -->
	<a id="homelink" href="http://localhost:1234">Home</a></li>
	<a id="registerlink" href="http://localhost:1234/register">Register</a></li>
	<div class="container">
		<div class="screen">
			<div class="screen__content">
				<form action="" method="post" class="login">
					<div class="login__field" id="divemailin">
						<i class="login__icon fas fa-user"></i>
						<i id="clsemail" onclick="clsemail()" class="fa fa-close"></i>
						<input required type="text" id="emailin" class="login__input" name="email" placeholder="Email">
					</div>
					<div class="login__field" id="divemailin">
						<i class="login__icon fas fa-lock"></i>
						<i id="clspass" onclick="clspass()" class="fa fa-close"></i>
						<input required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
							title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
							type="password" id="passwordin" class="login__input" name="password" placeholder="Password">
					</div>
					<button id="subbut" class="button login__submit">
						<span class="button__text">Log In</span>
						<i class="button__icon fas fa-chevron-right"></i>
					</button>
					<div class="forgetpass">
						<a id="forgetpassa" href="/login/forgetpassword">Forget Password ?</a>
					</div>
					<div class="dontaccount">
						<span id="dontaccounts">Dont Account ?</span>
						<a id="dontaccounta" href="/register">click</a>
					</div>
				</form>
			</div>
			<div class="screen__background">
				<span class="screen__background__shape screen__background__shape4"></span>
				<span class="screen__background__shape screen__background__shape3"></span>
				<span class="screen__background__shape screen__background__shape2"></span>
				<span class="screen__background__shape screen__background__shape1"></span>
			</div>
		</div>
	</div>
	<!-- partial -->
	<script>
		function clsemail()
		{
			var input = document.querySelector("#emailin");
			input.value = "";
		}
		function clspass()
		{
			var input2 = document.querySelector("#passwordin");
			input2.value = "";
		}
	</script>

</body>

