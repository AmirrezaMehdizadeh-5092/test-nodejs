<link rel="stylesheet" href="/static2/register.css">
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<title>Register</title>
<a id="homelink" href="http://localhost:1234">Home</a></li>
<a id="registerlink" href="http://localhost:1234/login">Login</a></li>
<div id="login-box">
  <div class="left">
    <form action="" method="post">
      <h1>Register</h1>
      <div id="formdiv">
        <i class="fa fa-close" id="usernamecls" onclick="usernamecls()"></i>
        <input required type="text" name="username" placeholder="Username" id="usernamein" />
      </div>
      <div id="formdiv">
        <i class="fa fa-close" id="emailcls" onclick="emailcls()"></i>
        <input required type="text" name="email" placeholder="E-mail" id="emailin" />
      </div>
      <div id="formdiv">
        <i class="fa fa-close" id="emailcls" onclick="passwordcls()"></i>
        <input required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
          title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
          type="password" name="password" placeholder="Password" id="passwordin" />
      </div>
      <div id="formdiv">
        <i class="fa fa-close" id="emailcls" onclick="verpasswordcls()"></i>
        <input  title="passwords not same" required type="password" name="password2" placeholder="Retype password"
          id="verpasswordin" />
      </div>
      <%- recaptcha %> 
      <input required type="submit" name="signup_submit" value="Register Me" id="subbut" />
    </form>
  </div>

  <div class="right">
    <img src="/static2/ocean_0.jpg" height="340" width="290" alt="">
  </div>
</div>


<script>
  function usernamecls() {
    var input1 = document.querySelector("#usernamein");
    input1.value = "";
  }
  function emailcls() {
    var input2 = document.querySelector("#emailin");
    input2.value = "";
  }
  function passwordcls()
  {
    var input3 = document.querySelector("#passwordin");
    input3.value = "";
  }
  function verpasswordcls()
  {
    var input4 = document.querySelector("#verpasswordin");
    input4.value = "";
  }
</script>